<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/HomeFragment">

    <fragment
        android:id="@+id/HomeFragment"
        android:name="com.example.mytrip.HomeFragment"
        android:label="@string/home_fragment_label"
        tools:layout="@layout/home_fragment">

        <action
            android:id="@+id/action_HomeFragment_to_CountryFragment"
            app:destination="@id/CountryPageFragment" />
    </fragment>
    <fragment
        android:id="@+id/CountryPageFragment"
        android:name="com.example.mytrip.CountryPageFragment"
        android:label="Country Page"
        tools:layout="@layout/country_page">
        <argument android:name="country" app:argType="com.example.mytrip.classes.Country"/>
    </fragment>
    <fragment
        android:id="@+id/PostsFragment"
        android:name="com.example.mytrip.posts.PostsFragment"
        android:label="Posts Fragment"
        tools:layout="@layout/fragment_country_posts">
    </fragment>
</navigation>