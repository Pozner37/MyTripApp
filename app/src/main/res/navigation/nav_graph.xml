<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/HomeFragment">

    <fragment
        android:id="@+id/HomeFragment"
        android:name="com.example.mytrip.HomeFragment"
        android:label="@string/home_fragment_label"
        tools:layout="@layout/home_fragment">

        <action
            android:id="@+id/action_HomeFragment_to_CountryFragment"
            app:destination="@id/CountryFragment" />
    </fragment>
    <fragment
        android:id="@+id/CountryFragment"
        android:name="com.example.mytrip.CountryFragment"
        tools:layout="@layout/country_fragment">

        <action
            android:id="@+id/action_CountryFragment_to_HomeFragment"
            app:destination="@id/HomeFragment" />
        <argument android:name="country" app:argType="com.example.mytrip.classes.Country"/>
    </fragment>
</navigation>